{
  "manifest_version": 2,
  "name": "HBO Nordic keyboard controls",
  "version": "1.0.1",
  "description": "Adds keyboard shortcuts for HBO Nordic player",
  "content_scripts": [
    {
      "matches": ["*://*.hbonordic.com/*"],
      "js": ["hbo-nordic-keyboard.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "68.0"
    }
  }
}
